%tr
  %td.col-sm-8.col-md-6
    .media
      = image_tag order_item.product.image.thumb.url, class: "media-object thumbnail pull-left", size: "90x120"
      .media-body
        %h4.media-heading= link_to order_item.product.title, product_path(order_item.product)
  %td.col-sm-1.col-md-1{:style => "text-align: center"}
    = item_form.number_field :quantity, {min: 1, max: order_item.product.in_stock, class: "form-control"}
  %td.col-sm-1.col-md-1.text-center
    %strong
      $#{order_item.product.price}
  %td.col-sm-1.col-md-1.text-center
    %strong
      $#{order_item.total_price}
  %td.col-sm-1.col-md-1
    = link_to order_item_path(order_item), method: :delete,  class: "btn btn-danger" do
      %span.glyphicon.glyphicon-remove
        = t("current_cart.remove")
